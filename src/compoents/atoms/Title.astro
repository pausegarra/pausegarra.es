---
interface Props {
  title: string;
  as?: string;
  class?: string;
}

const { title, as = "h2", class: additionalClass } = Astro.props;

const className = `font-bold bg-clip-text text-transparent ${additionalClass}`;
---

{as === "h1" && (
  <h1 class={`text-6xl md:text-8xl font-bold py-2 ${className}`}>
    {title}
  </h1>
)}

{as === "h2" && (
  <h2 class={`text-4xl ${className}`}>
    {title}
  </h2>
)}

{as === "h3" && (
  <h3 class={`text-2xl ${className}`}>
    {title}
  </h3>
)}

{as === "h4" && (
  <h4 class={`text-xl ${className}`}>
    {title}
  </h4>
)}