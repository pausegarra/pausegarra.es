---
import Project from "../molecules/Project.astro";
import { getCollection } from "astro:content";
import Title from "../atoms/Title.astro";

const projects = await getCollection("projects");
---

<section class="py-20 px-4 bg-gray-800">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <Title as="h2" title="Featured Projects" class="font-bold mb-2 bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent" />
      <div class="w-24 h-1 bg-gradient-to-r from-green-600 to-blue-600 mx-auto"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <Project project={project.data} slug={project.slug} />
      ))}
    </div>
  </div>
</section>