---
import Title from "../atoms/Title.astro";
---
<section class="min-h-screen flex items-center justify-center relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
  <div class="text-center z-10 px-4">
    <div class="mb-6">
      <Title class="bg-gradient-to-r from-blue-400 via-purple-500 to-green-400" title="Pau Segarra" as="h1" />
      <div class="h-12 flex items-center justify-center">
        <h2 class="text-2xl md:text-4xl text-gray-300 font-light">
          <span id="typing-target"></span>
          <span class="animate-pulse">|</span>
        </h2>
      </div>
    </div>

    <p class="text-lg md:text-xl text-gray-400 mb-8 max-w-2xl mx-auto leading-relaxed">
      I'm a Software Engineer focused on crafting robust server architectures, RESTful APIs, and optimized database systems that power scalable and modern web applications.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="#about" class="px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg font-medium hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
        View My Work
      </a>
      <a
        href="#contact"
        class="px-8 py-3 border-2 border-gray-600 text-gray-300 rounded-lg font-medium hover:border-gray-400 hover:text-white transition-all duration-300"
      >
        Get In Touch
      </a>
    </div>
  </div>

  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-10"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-10"></div>
  </div>
</section>

<script type="module" is:inline>
  function type() {
    const fullText = "Turning complexity into elegant software solutions";
    const target = document.getElementById("typing-target");

    let i = 0;
    const timer = setInterval(() => {
      if (i < fullText.length) {
        target.textContent = fullText.slice(0, i + 1);
        i++;
      } else {
        clearInterval(timer);
      }
    }, 100);
  }

  type();
  document.addEventListener('astro:after-swap', type);
  document.addEventListener('DOMContentLoaded', type);
</script>