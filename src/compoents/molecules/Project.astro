---
import Card from "../atoms/Card.astro";
import Pill from "../atoms/Pill.astro";
import Title from "../atoms/Title.astro";

interface Props {
  project: {
    title: string;
    shortDescription: string;
    tech: string[];
    features: string[];
  };
  slug: string;
}

const {project, slug} = Astro.props;
---

<Card additionalClass="bg-gray-900 p-8 rounded-xl flex-col shadow-2xl">
  <a href={`/projects/${slug}/`}>
    <Title as="h3" title={project.title} transitionName={`project-title-${slug}`} class="text-2xl font-semibold mb-4 text-white group-hover:text-blue-400 transition-colors" />

    <p class="text-gray-400 mb-6 leading-relaxed" transition:name={`project-description-${slug}`}>
      {project.shortDescription}
    </p>

    <div class="mb-6">
      <h4 class="text-sm font-semibold text-gray-300 mb-3">Key Features:</h4>
      <div class="grid grid-cols-2 gap-2">
        {project.features.map((feature, featureIndex) => (
          <div class="flex items-center text-sm text-gray-400">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
            {feature}
          </div>
        ))}
      </div>
    </div>

    <div class="flex flex-wrap gap-2">
      {project.tech.map((tech, techIndex) => (
        <Pill
          item={tech}
          color="text-blue-400"
        />
      ))}
    </div>
  </a>
</Card>
