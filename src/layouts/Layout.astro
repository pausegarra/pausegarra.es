---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  url: string;
  ogImage?: string;
}

const { title, description, url, ogImage } = Astro.props;
const image = ogImage ? ogImage : '/favicon.svg';
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="description" content={description}>
  <link rel="canonical" href={url}>

  <meta property="og:type" content="website">
  <meta property="og:url" content={url}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={`https://pausegarra.es${image}`}>

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`https://pausegarra.es${image}`}>

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Pau Segarra",
      "url": "https://pausegarra.es/",
      "jobTitle": "Backend Software Engineer",
      "description": "Experienced backend developer specialized in scalable microservices, APIs, and cloud infrastructure.",
      "sameAs": [
        "https://github.com/pausegarra",
        "https://www.linkedin.com/in/paausegarra",
        "mailto:you@example.com"
      ]
    }
  </script>

  <title>{title}</title>
  <ClientRouter />
</head>
<body>
<div>
  <slot />
</div>
</body>
</html>

<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
                45deg,
                rgb(var(--accent)),
                rgb(var(--accent-light)) 30%,
                white 60%
        );
    }

    html {
        font-family: system-ui, sans-serif;
        background: var(--color-gray-800);
        color: #fff;
    }
</style>